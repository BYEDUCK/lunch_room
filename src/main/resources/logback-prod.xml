<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<property name="LOGS" value="/logs"/>

	<appender name="RollingFile"
			  class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOGS}/lunchroom.log</file>
		<encoder
				class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d{ISO8601} %magenta([%thread]) %highlight(%-5level) %yellow(%logger{36}.%M) - %msg%n%throwable</Pattern>
		</encoder>

		<rollingPolicy
				class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily and when the file reaches 10 MegaBytes -->
			<fileNamePattern>${LOGS}/archived/spring-boot-logger-%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
					class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>10MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
	</appender>

	<!-- LOG everything at INFO level -->
	<root level="info">
		<appender-ref ref="RollingFile"/>
	</root>

	<!-- LOG "byeduck.lunchroom*" at TRACE level -->
	<logger name="byeduck.lunchroom" level="trace" additivity="false">
		<appender-ref ref="RollingFile"/>
	</logger>

	<logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="debug" additivity="false">
		<appender-ref ref="RollingFile"/>
	</logger>

</configuration>
